<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white_backgroud_color"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/bluetooth"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/activity_60dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/activity_padding_10dp"
        android:paddingBottom="@dimen/activity_padding_10dp"
        android:src="@drawable/bluetooth"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textSize="@dimen/activity_text_22sp"
        android:gravity="center"
        android:text="@string/bluetooth"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/datastore"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/activity_60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingTop="@dimen/activity_padding_10dp"
            android:paddingBottom="@dimen/activity_padding_10dp"
            android:src="@drawable/profile"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="@dimen/activity_text_22sp"
            android:gravity="center"
            android:text="@string/datastore"
            />
    </LinearLayout>
</LinearLayout>